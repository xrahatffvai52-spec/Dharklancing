# Example .env file

# MongoDB Configuration
MONGODB_URI=mongodb://<username>:<password>@localhost:27017/<db>

# Payment Gateway Configurations
BKASH_API_KEY=your_bkash_api_key
BKASH_API_SECRET=your_bkash_api_secret

NAGAD_API_KEY=your_nagad_api_key
NAGAD_API_SECRET=your_nagad_api_secret

BANK_API_KEY=your_bank_api_key
BANK_API_SECRET=your_bank_api_secret

STRIPE_API_KEY=your_stripe_api_key

PAYPAL_CLIENT_ID=your_paypal_client_id
